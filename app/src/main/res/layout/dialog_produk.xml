<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <EditText android:id="@+id/inputNamaProduk"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nama Produk"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edit_text_style"
            android:textColorHint="@color/colorPrimaryLight"/>

        <EditText android:id="@+id/inputDeskripsiProduk"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Deskripsi Produk"
            android:minLines="1"
            android:maxLines="3"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edit_text_style"
            android:textColorHint="@color/colorPrimaryLight"/>

        <faranjit.currency.edittext.CurrencyEditText
            android:id="@+id/inputHargaProduk"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Harga Produk"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edit_text_style"
            android:textColorHint="@color/colorPrimaryLight"
            android:drawableLeft="@drawable/ic_rp"
            android:drawablePadding="10dp"
            app:groupDivider="."
            app:monetaryDivider=","
            app:showSymbol="false"
            app:locale="id_ID" />

        <EditText android:id="@+id/inputSatuanProduk"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Satuan Produk"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edit_text_style"
            android:textColorHint="@color/colorPrimaryLight"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto Profil"
            android:textColor="@color/white"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekan gambar untuk memilih foto"
            android:textColor="@color/white"
            android:id="@+id/textView2"
            android:textSize="12sp"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/inputFotoProduk"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/image_selector"
            android:minHeight="150dp"
            android:minWidth="200dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/default3" />

    </LinearLayout>
</ScrollView>