<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:id="@+id/container">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Pemberitahuan"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/radioGroupPemberitahuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:sc_border_width="1dp"
        app:sc_corner_radius="10dp"
        app:sc_tint_color="@color/white"
        app:sc_checked_text_color="@color/colorPrimaryDark">

        <RadioButton
            android:id="@+id/radioBtnOn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="On"
            style="@style/RadioButton" />

        <RadioButton
            android:id="@+id/radioBtnOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Off"
            style="@style/RadioButton" />
    </info.hoang8f.android.segmented.SegmentedGroup>

    <EditText android:id="@+id/inputJarakPemberitahuan"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Jarak"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/edit_text_style"
        android:textColorHint="@color/colorPrimaryLight"/>

</LinearLayout>