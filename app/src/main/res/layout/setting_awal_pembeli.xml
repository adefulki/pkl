<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <EditText android:id="@+id/inputNamaPembeli"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nama"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edit_text_style2"
            android:textColorHint="@color/colorPrimaryLight"/>

        <EditText android:id="@+id/inputAlamatPembeli"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Alamat"
            android:minLines="1"
            android:maxLines="3"
            android:drawableLeft="@drawable/ic_menu_home"
            android:drawablePadding="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edit_text_style2"
            android:textColorHint="@color/colorPrimaryLight"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto Profil"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textView"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekan gambar untuk memilih foto"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textView2"
            android:textSize="12sp"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/fotoPembeli"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/image_selector"
            android:minHeight="150dp"
            android:minWidth="200dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/default1" />

        <Button
            android:id="@+id/btnSelesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="40dp"
            android:text="Selesai"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"/>

    </LinearLayout>
</ScrollView>