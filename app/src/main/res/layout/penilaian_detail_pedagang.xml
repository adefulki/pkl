<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_alpha">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penilaian Rata-Rata"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:id="@+id/textView5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textColor="@color/colorPrimary"
                android:id="@+id/countPenilaianDagangan"
                android:layout_marginRight="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penilaian"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="4.8"
            android:textColor="@color/colorPrimary"
            android:textSize="60sp"
            android:id="@+id/meanPenilaianDagangan"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/meanPenilaianDagangan"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/meanPenilaianDagangan">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Bintang :"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/bintangLima"
                    android:textColor="@color/colorPrimary"/>
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progressBarBintangLima"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    app:rcProgress="30"
                    app:rcMax="100"
                    app:rcRadius="4dp"
                    app:rcBackgroundPadding="3dp"
                    app:rcProgressColor="@color/colorPrimary"
                    app:rcBackgroundColor="@color/iron" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Bintang :"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/bintangEmpat"
                    android:textColor="@color/colorPrimary"/>
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progressBarBintangEmpat"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    app:rcProgress="30"
                    app:rcMax="100"
                    app:rcRadius="4dp"
                    app:rcBackgroundPadding="3dp"
                    app:rcProgressColor="@color/colorPrimary"
                    app:rcBackgroundColor="@color/iron" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Bintang :"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/bintangTiga"
                    android:textColor="@color/colorPrimary"/>
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progressBarBintangTiga"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    app:rcProgress="30"
                    app:rcMax="100"
                    app:rcRadius="4dp"
                    app:rcBackgroundPadding="3dp"
                    app:rcProgressColor="@color/colorPrimary"
                    app:rcBackgroundColor="@color/iron" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Bintang :"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/bintangDua"
                    android:textColor="@color/colorPrimary"/>
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progressBarBintangDua"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    app:rcProgress="30"
                    app:rcMax="100"
                    app:rcRadius="4dp"
                    app:rcBackgroundPadding="3dp"
                    app:rcProgressColor="@color/colorPrimary"
                    app:rcBackgroundColor="@color/iron" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Bintang :"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/bintangSatu"
                    android:textColor="@color/colorPrimary"/>
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progressBarBintangSatu"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    app:rcProgress="30"
                    app:rcMax="100"
                    app:rcRadius="4dp"
                    app:rcBackgroundPadding="3dp"
                    app:rcProgressColor="@color/colorPrimary"
                    app:rcBackgroundColor="@color/iron" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>