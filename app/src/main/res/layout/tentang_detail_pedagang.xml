<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_alpha">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/fotoPedagang"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/default3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pedagang:"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/namaPedagang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pedagang"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Pedagang:"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/emailPedagang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Pedagang"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Ponsel Pedagang:"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/noPonselPedagang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Ponsel Pedagang"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Pedagang:"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/alamatPedagang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Pedagang"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>